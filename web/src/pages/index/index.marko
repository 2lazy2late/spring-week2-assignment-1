    <for|task| of=state.tasks>
        <li>
            <if(task.editState)>
                <input key=`title-${task.id}` value=task.title type='text'/>
                &nbsp; <button type='button' on-click('updateTask', task.id)>확인</button>
                &nbsp; <button type='button' on-click('cancleTask', task.id)>취소</button>
            </if>
            <else>
            ${task.title}
            &nbsp; <button type='button' on-click('editModeTask', task.id)>수정</button>
            &nbsp; <button type='button' on-click('deleteTask', task.id)>완료</button>
            </else>
        </li>
    </for>
