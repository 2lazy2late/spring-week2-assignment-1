import axios from 'axios';
class {
    onCreate(){
        this.state = {
            tasks: [],
        };
        this.loadTasks();
    }

    async loadTasks(){
        const { data } = await axios.get('http://localhost:8080/tasks');
        this.state.tasks = data;
    }

    async addTask(){
        const title = this.getEl('title').value;
        await axios.post('http://localhost:8080/tasks', {
            title,
        });
        await this.loadTasks();
    }

    async deleteTask(id){
        await axios.delete('http://localhost:8080/tasks/'+id);
        await this.loadTasks();
    }

    async editModeTask(id){
        /*
        var targetTask = this.state.tasks.find(o => o.id == id);
        targetTask.editState = true;
        this.state.tasks = [...this.state.tasks];
        */
        this.state.tasks = this.state.tasks.map(task => task.id === id ? {
            ...task, editState : true
        } : task);

    }
    async updateTask(id){
        const title = this.getEl(`title-${id}`).value;
        await axios.patch('http://localhost:8080/tasks/'+id, {
            title,
        });
        await this.loadTasks();
    }

    async cancleTask(id){
        this.state.tasks = this.state.tasks.map(task => task.id === id ? {
            ...task, editState : false
        } : task);
    }

}
