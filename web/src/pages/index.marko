<layout>
  <h1>ToDo</h1>

  <label for="task">할 일</label>
  <input type="text" id="task" on-change("handleChangeTitle") value=state.title />
  <button type="button" on-click("handleClickAddTask")>추가</button>
  
  <ol>
    <for|task| of=state.tasks>
      <li key=task.id>
        ${task.title}
        <button type="button">수정</button>
        <button type="button" on-click("handleClickDeleteTask", task.id)>완료</button>
      </li>
    </for>
  </ol>
</layout>
